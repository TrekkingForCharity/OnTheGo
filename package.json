{
  "name": "trekkingforcharity.org",
  "version": "1.0.0",
  "description": "The primary site for the Trekking for Charity platform",
  "main": "index.js",
  "scripts": {
    "build": "parcel build ./src/pages/layout.pug --out-file index.html",
    "start": "parcel ./src/pages/layout.pug --out-file index.html",
    "test": "mocha -r ts-node/register -r jsdom-global/register test/**/*.ts",
    "test:watch": "mocha -r ts-node/register -r jsdom-global/register --reporter=min --watch test/**/*.ts",
    "test:coverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" mocha -r ts-node/register -r jsdom-global/register test/**/*.spec.ts && nyc report",
    "test:coverage:release": "nyc -r cobertura -e .ts -x \"*.spec.ts\" mocha -r ts-node/register -r jsdom-global/register --reporter=xunit --reporter-options output=coverage/xunit-report.xml test/**/*.spec.ts && nyc report",
    "lint:release": "sass-lint src/**/*.scss -v -q --max-warnings 0",
    "lint:dev": "sass-lint src/**/*.scss -v -q",
    "lint:ts": "tslint -c tslint.json 'src/**/*.ts'",
    "font:install": "fontello-cli install --config ./fontello.config.json --css ./src/fonts/fontello/css --font ./src/fonts/fontello/font"    
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TrekkingForCharity/trekkingforcharity.org.git"
  },
  "author": "Trekking for Charity",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/TrekkingForCharity/trekkingforcharity.org/issues"
  },
  "homepage": "https://github.com/TrekkingForCharity/trekkingforcharity.org#readme",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.5",
    "chai": "4.2.0",
    "codacy-coverage": "^3.4.0",
    "fontello-cli": "^0.4.0",
    "parcel-plugin-compress": "1.0.6",
    "jsdom": "^13.1.0",
    "jsdom-global": "^3.0.2",
    "mocha": "5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mock-local-storage": "^1.1.8",
    "nyc": "^13.1.0",
    "parcel-bundler": "1.11.0",
    "pug": "2.0.3",
    "sass": "1.16.0",
    "sass-lint": "1.12.1",
    "ts-node": "7.0.1",
    "tslint": "5.12.1",
    "typedoc": "^0.14.2",
    "typemoq": "2.1.0",
    "typescript": "3.2.2"
  },
  "dependencies": {
    "bulma": "^0.7.2",
    "inversify": "^5.0.1",
    "prouter": "^9.0.1",
    "reflect-metadata": "^0.1.13"
  }
}
