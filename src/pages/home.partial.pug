.outer
    .columns
        .column.is-4
            aside.menu
                p.menu-label Treks
                    ul.menu-list
                        li
                            a#new-trek New Trek
                p.menu-label Profile
                    ul.menu-list
                        li
                            a Change Password   
        #my-treks.column.is-8                                

    div#create-trek
        ul.steps.has-content-above
            li.steps-segment
                span.steps-marker
                .steps-content.is-divider-content
                    p Some Simple Details
            li.steps-segment.is-active(data-step="trek-details")
                span.steps-marker
                .steps-content.is-divider-content
                    p Give it an Image
            li.steps-segment(data-step="trek-image")
                span.steps-marker
                .steps-content.is-divider-content
                    p Tell people where it's at            
            li.steps-segment(data-step="trek-location")
                span.steps-marker

        form#trek-details
            .field
                label.label.is-inline-block(for="name") The name of the trek
                span.help.is-pulled-right(data-valmsg-for="name")
                p.control
                    input#name.input(name="name", type="text" placeholder="Name")
            .field
                label.label.is-inline-block(for="description") Description
                span.help.is-pulled-right(data-valmsg-for="description")
                p.control
                    div#description.input(name="description", contenteditable="true", style="height: 30vh;")
            .columns
                .column.is-12
                    .field
                        p.control.has-text-right
                            button.button.is-primary Next
        form#trek-image.is-hidden
            .field
                label.label.is-inline-block(for="image") Banner Image
                div.drag-target(style="height:50vh;")
                    .box__input
                        svg.box__icon(xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43")
                            path(d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z")
                                
                        input#trek-image-selection.is-hidden(type="file" accept="image/*" name="trek-image")
                        label(for="trek-image-selection")
                            strong Choose a file
                            span.box__dragndrop  or drag it here
            .field
                p.control.has-text-right
                    button.button.is-primary Skip for now
        form#trek-location.is-hidden
            .field
                label.label.is-inline-block(for="start") Start Location
            .field
                p.control.has-text-right
                    button.button.is-primary Skip for now

    script#trek-item(type="text/template")
        article.media
            figure.media-left
                p.image.is-64x64
                    img(src="{{bannerImage}}")
            .media-content
                .content
                    p
                        strong {{title}}
                        span {{description}}
                p.buttons.is-right
                    a.button.is-small(href="{{viewUrl}}",  data-navigation)
                        span.icon.is-small
                            i.icon-book-open
                        |&nbsp;View
                    a.button.is-small(href="{{editDetailsUrl}}",  data-navigation)
                        span.icon.is-small
                            i.icon-pencil
                        |&nbsp;Edit Details
                    a.button.is-small(href="{{editLocationsUrl}}",  data-navigation)
                        span.icon.is-small
                            i.icon-location
                        |&nbsp;Edit Start and Finish
                    a.button.is-danger.is-small
                        span.icon.is-small
                            i.icon-trash-empty
                        |&nbsp;Delete